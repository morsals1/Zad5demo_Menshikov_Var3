<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityResult">

    <TextView
        android:id="@+id/Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат расчета"
        android:textColor="@color/light_purple_demo"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:background="@color/light_blue_demo"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="41dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calculate">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" количество метров"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/spinner_skin"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"/>


        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="результат"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/spinner_skin"
            android:layout_gravity="center"
            android:layout_marginTop="133dp"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="25dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/button_skin"
            android:text="Регистрация"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>